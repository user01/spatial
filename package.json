{
  "name": "spatial",
  "version": "0.4.0",
  "description": "An Immutable Vector Math Library. Clarity and brevity over speed.",
  "main": "build/main.js",
  "typings": "build/main.d.ts",
  "files": [
    "build/",
    "!build/tests/"
  ],
  "scripts": {
    "build": "npm run test && npm run lint-build",
    "build-ts": "./node_modules/.bin/tsc",
    "lint-build": "./node_modules/.bin/ts-npm-lint --fix-typings",
    "test-simple": "./node_modules/.bin/_mocha  --ui bdd --reporter dot ./build/tests/**/*.js",
    "test-coverage": "./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- --ui bdd --debug-brk --reporter dot ./build/tests/**/*.js",
    "coverage": "npm run build-ts && npm run test-coverage",
    "test": "npm run build-ts && npm run test-simple"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:root77/spatial.git"
  },
  "author": "Codex10 <dev@codex10.com>",
  "license": "MIT",
  "dependencies": {
    "moment": "2.10.6"
  },
  "devDependencies": {
    "istanbul": "^0.4.3",
    "mocha": "^2.4.5",
    "should": "^4.6.5",
    "ts-npm-lint": "^0.1.0",
    "typescript": "^1.8.10"
  }
}
